{
  "name": "restapi-nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Modular Node.js RestAPI with typescript boilerplate",
  "main": "src/index.ts",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc -b . && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djibril6/restapi-nodejs-boilerplate.git"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "typescript",
    "express",
    "restapi",
    "rest",
    "api",
    "travis",
    "docker"
  ],
  "author": "Djibril ISSOUFOU MAMAN <idjibrilmaman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/djibril6/restapi-nodejs-boilerplate/issues"
  },
  "homepage": "https://github.com/djibril6/restapi-nodejs-boilerplate#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "ncp": "^2.0.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.14",
    "pm2": "^5.1.2",
    "prettier": "2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
